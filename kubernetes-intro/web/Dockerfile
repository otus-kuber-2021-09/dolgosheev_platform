##################################################################
#   Base System
##################################################################

FROM nginx

##################################################################
#   Label
##################################################################

LABEL maintainer="alexanderdolgosheev@gmail.com"

##################################################################
#   User
##################################################################

RUN groupadd --gid 1001 alexander \
  && useradd --uid 1001 --gid alexander --shell /bin/bash --create-home alexander
USER 1001

WORKDIR /app

COPY ./nginx/default.conf /etc/nginx/conf.d/
COPY ./nginx/nginx.conf /etc/nginx/

##################################################################
#   Web
##################################################################

COPY ./html/homework.html /app

##################################################################
#   Set port
##################################################################

EXPOSE 8000